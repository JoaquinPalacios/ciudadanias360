{
  "format": "page",
  "id": "article",
  "label": "Artículo",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": ""
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Título",
          "placeholder": "Título del artículo"
        }
      },
      "excerpt": {
        "type": "Text",
        "config": {
          "label": "Extracto",
          "placeholder": "Resumen corto para listas/tarjetas"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Imagen destacada",
          "constraint": {},
          "thumbnails": []
        }
      },
      "publish_date": {
        "type": "Date",
        "config": {
          "label": "Fecha de publicación",
          "placeholder": ""
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Autor",
          "select": "document",
          "customtypes": ["author"],
          "allowTargetBlank": false
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "label": "Categoría",
          "select": "document",
          "customtypes": ["category"],
          "allowTargetBlank": false
        }
      },
      "body": {
        "type": "StructuredText",
        "config": {
          "label": "Contenido",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,list-item,o-list-item"
        }
      }
    },
    "SEO y metadatos": {
      "meta_title": {
        "config": {
          "label": "Título meta",
          "placeholder": "Un título de la página para redes sociales y motores de búsqueda"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Descripción meta",
          "placeholder": "Un breve resumen de la página"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Imagen meta",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
