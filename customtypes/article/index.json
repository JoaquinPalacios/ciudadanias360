{
  "format": "page",
  "id": "article",
  "label": "Article",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": ""
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Article title"
        }
      },
      "excerpt": {
        "type": "Text",
        "config": {
          "label": "Excerpt",
          "placeholder": "Short summary used in lists/cards"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "publish_date": {
        "type": "Date",
        "config": {
          "label": "Publish date",
          "placeholder": ""
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Author",
          "select": "document",
          "customtypes": ["author"],
          "allowTargetBlank": false
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "label": "Categor√≠a",
          "select": "document",
          "customtypes": ["category"],
          "allowTargetBlank": false
        }
      },
      "body": {
        "type": "StructuredText",
        "config": {
          "label": "Body",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,list-item,o-list-item"
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
